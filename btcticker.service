[Unit]
Description=Logstash Btc Ticker
After=syslog.target

[Service]
SyslogIdentifier=probe
WorkingDirectory=/usr/share/logstash-btcticker
ExecStart=/usr/bin/nodejs /usr/share/logstash-btcticker/app.js
Restart=on-failure
StandardError=syslog
StandardOutput=null

[Install]
WantedBy=multi-user.target
